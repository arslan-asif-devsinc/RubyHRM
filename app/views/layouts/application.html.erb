<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>HRIS</title>
    <%= csrf_meta_tags %>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <%= stylesheet_link_tag "application", :media => "all" %>
</head>

<body data-no-turbolink="true">
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <%= link_to "HRIS", root_path, :class => "navbar-brand" %>

                <!--<button type="button" class="btn btn-primary navbar-btn navbar-toggle collapsed" data-toggle="collapse" data-target="#links"><span class="fa fa-bars fa-fw"></span></button> -->
                <button type="button" class="btn btn-primary navbar-btn navbar-toggle collapsed" data-toggle="collapse" data-target="#links">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <span>&nbsp;&nbsp;</span> <!-- fix this! -->
                <div class="btn-group">
                    <%= button_tag(:type => "button", :class => "btn btn-primary navbar-btn", :data => { :html => true, :placement => "bottom", :content => "#{render 'layouts/home_menu'}", :container => "body", :toggle => "popover" }) do %>
                        <span class="fa fa-home fa-fw"></span>
                    <% end %>
                </div>
            </div>

            <%= form_tag(searches_path, :method => "get", :id => "search-form", :class => "navbar-form navbar-left") do %>
                <div class="input-group"> 
                    <%= text_field_tag :global_search, params[:global_search], :placeholder => "Search", :class => "form-control" %>
                    <div class="input-group-btn">
                        <%= button_tag(:type => "submit", :name => nil, :class => "btn btn-primary") do %>
                            <span class="fa fa-search fa-fw"></span>
                        <% end %>
                    </div> 
                </div>
            <% end %>

            <%= render 'layouts/navbar_top' %>            
        </div>
    </nav>

    <ul class="breadcrumb">
        <li class="dropdown">
            <a class="dropdown-toggle" role="button" data-toggle="dropdown" href="#" title="Recent History and Favorites"><span class="fa fa-history fa-fw"></span><span class="caret"></span></b></a>
            <ul class="dropdown-menu">
                <li class="dropdown-header">Recently Visited</li>
                <li><a href="#">Recently visited 1</a></li>
                <li><a href="#">Recently visited 1</a></li>
                <li><a href="#">Recently visited 1</a></li>
                <li><a href="#">Recently visited 1</a></li>
                <li><a href="#">Recently visited 1</a></li>
                <li role="separator" class="divider"></li>
                <li class="dropdown-header">Favorites</li>
                <li><a href="#">Recently visited 1</a></li>
                <li><a href="#">Recently visited 1</a></li>
                <li><a href="#">Recently visited 1</a></li>
                <li><a href="#">Recently visited 1</a></li>
                <li><a href="#">Recently visited 1</a></li>
            </ul>
        </li>
        <%= render_breadcrumbs :tag => :li, :separator => "" %>
    </ul>

    <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <% flash_messages %>
                </div>
            </div>
            
            <%= yield %>            
    </div>

    <%= javascript_include_tag "application" %>
    <script>
        $(function () {
            $('[data-toggle="popover"]').popover( { html : true })
            .click(function(e) {
                e.preventDefault();
            });
        })
    </script>
</body>

</html>
